<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head") %> 
    
<body>
    <body>

        <%- include("../partials/header") %>

        <main>

            <section class="listadoProductos">
                <% for(let product of products) { %>
                    <article class="productos">
                        <div class="producto"> 
                            <a href="/products/details/<%= product.id %>" class="imagen"><img src="/images/products/<%= product.image %>" style="width: 100%;"></a>
                            <p class="nombre"><%= product.name %></p>
                            <p class="descripcion"><%= product.description %></p>
                            <p class="precio">$ <%= product.final_price %></p>
                            
                            <div class="buttons">
                                <a href="/products/edit/<%= product.id %>"><button class="editar">Editar</button></a>
                                <form action="/products/details/<%= product.id %>?_method=DELETE" method="post" class="form">
                                    <button type="submit" class="eliminar">Eliminar</button>
                                </form>
                            </div>
                            
                        </div>
                    </article>
                <% } %>
            </section>
            
        </main>

        <div class="return">
            <a href="/admin/table" class="returnAdminTable">Volver al tablero de administrador</a>
        </div>

        <%- include("../partials/footer") %>

    </body>
</body>
</html>