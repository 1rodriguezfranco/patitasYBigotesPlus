<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head") %> 

<body>

    <%- include("../partials/header") %>  

    <div class="container_register">
            <div class="container_register_form">

                <div class="title_register_form">
                    <h1 id="title_register_form_h1">Registro</h1>
                </div>

                <div class="subtitle_register_form">
                    <h2 id="subtitle_register_form_h2">(*) Campo obligatorio</h2>
                </div>

                <form action="/auth/register" id="register_form" method="post" enctype="multipart/form-data"> 

                    <div class="form-group">
                      <label for="Nombre">Nombre/s (*)</label>
                      <input type="text" id="first_name" name="first_name" class="input_register <%= locals.errors && errors.first_name ? 'is-invalid' : null %>" value= "<%= locals.oldData && oldData.first_name ? oldData.first_name : null %>">
                      <small class="error-msg"></small>
                      <% if (locals.errors && errors.first_name) { %>
                        <p class="text-danger"><%= errors.first_name.msg %></p>
                      <% } %>
                    </div>

                    <div class="form-group">
                        <label for="last_name">Apellido/s (*)</label>
                        <input type="text" id="last_name" name="last_name" class="input_register <%= locals.errors && errors.last_name ? 'is-invalid' : null %>" value= "<%= locals.oldData && oldData.last_name ? oldData.last_name : null %>">
                        <small class="error-msg"></small>
                        <% if (locals.errors && errors.last_name) { %>
                          <p class="text-danger"><%= errors.last_name.msg %></p>
                        <% } %>
                      </div>

                    <div class="form-group">
                        <label for="email">Email (*)</label>
                        <input type="email" id="email" name="email" class="input_register <%= locals.errors && errors.email ? 'is-invalid' : null %>" value= "<%= locals.oldData && oldData.email ? oldData.email : null %>">
                        <small class="error-msg"></small>
                        <% if (locals.errors && errors.email) { %>
                            <p class="text-danger"><%= errors.email.msg %></p>
                        <% } %>
                      </div>

                    <div class="form-group">
                        <label for="password">Contraseña (*)</label>
                        <input type="password" id="password" name="password" class="input_register <%= locals.errors && errors.password ? 'is-invalid' : null %>">
                        <small class="error-msg"></small>
                        <% if (locals.errors && errors.password) { %>
                            <p class="text-danger"><%= errors.password.msg %></p>
                        <% } %>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">Confirma tu contraseña (*)</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" class="input_register <%= locals.errors && errors.confirmPassword ? 'is-invalid' : null %>">
                        <small class="error-msg"></small>
                        <% if (locals.errors && errors.confirmPassword) { %>
                            <p class="text-danger"><%= errors.confirmPassword.msg %></p>
                        <% } %>
                    </div>

                    <div class="form-group">
                        <label for="avatar" class="form-label">Carga una foto</label>
                        <input type="file" id="avatar" name="avatar" class="input_avatar <%= locals.errors && errors.avatar ? 'is-invalid' : null %>">
                        <small class="error-msg"></small>
                        <% if(locals.errors && errors.avatar) { %>
                            <p class="text-danger"><%= errors.avatar.msg %></p>
                        <% } %>    
                    </div>

                    <div class="container_buttons">
                        <button type="submit" class="register_button_submit" id="submitBtn">Registrarme</button>
                        <button type="reset" class="register_button_reset">Borrar</button>
                    </div>

                </form>

            </div>
    </div>

    <script src="/js/validations/register.js"></script>

    <%- include("../partials/footer") %>

<body>
</html>