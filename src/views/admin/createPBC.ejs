<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head") %> 
    
<body>
  
    <%- include("../partials/header") %>
    
    <div class="admin_createPetBrandCategory">

        <section class="creation_form">

            <h1>Agregue a una nueva <%= locals.singular %></h1>

            <form action="/admin/create/<%= locals.route %>" id="creation_<%= locals.route %>_form" method="post">
                <div class="form-group">
                    <label for="name">Nombre de la <%= locals.singular %>:</label>
                    <input type="text" id="name" name="name">
                    <% if (locals.errors && errors.name) { %>
                    <p style="color: red;"><%= errors.name.msg %></p>
                    <% } %>
                </div>
                <button type="submit">Enviar</button>
            </form>

        </section>

        <section class="list">

            <h1><%= locals.plural %> existentes:</h1>

            <ul>
                <% if (locals.created) { %>
                    <% locals.created.forEach(function(i) { %>
                        <li><%= i.name %></li>
                    <% }); %>
                <% } %>
            </ul>

        </section>

    </div>

    <%- include("../partials/footer") %>

</body>
</html>